<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Bobot Kerugian"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txtBobotkerugian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bobot Kerugian" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btnBobotkerugian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tambah Bobot"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorPrimary" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bobot Waktu" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txtBobotwaktu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bobot Waktu" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btnBobotwaktu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tambah Bobot"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorPrimary" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>